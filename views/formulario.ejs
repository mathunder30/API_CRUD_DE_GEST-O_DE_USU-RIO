<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário de Usuário</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Formulário de Usuário</h1>

  <!-- Formulário para criar ou atualizar um usuário -->
  <form action="/api/usuarios/criar" method="POST" class="form">
      <input type="text" name="nome" placeholder="Nome" required>
      <input type="email" name="email" placeholder="Email" required>
      <input type="password" name="senha" placeholder="Senha" required>
      <button type="submit" class="btn">Salvar Usuário</button>
  </form>

  <!-- Botões para os métodos de atualizar, deletar e buscar -->
  <div class="form-actions">
      <form action="/api/usuarios/buscar" method="GET" class="search-form">
          <input type="text" name="id" placeholder="ID do usuário" required>
          <button type="submit" class="btn">Buscar Usuário</button>
      </form>
      
      <form action="/api/usuarios/atualizar" method="POST" class="update-form">
          <input type="text" name="id" placeholder="ID do usuário" required>
          <input type="text" name="nome" placeholder="Novo nome" required>
          <input type="email" name="email" placeholder="Novo email" required>
          <button type="submit" class="btn">Atualizar Usuário</button>
      </form>
      
      <form action="/api/usuarios/deletar" method="POST" class="delete-form">
          <input type="text" name="id" placeholder="ID do usuário" required>
          <button type="submit" class="btn btn-danger">Deletar Usuário</button>
      </form>
  </div>
</body>
</html>
